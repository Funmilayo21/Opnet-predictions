# Example Deployment Configuration

# This file contains example configurations for deploying OPNet Predictions
# Copy this file to .env and fill in your actual values

## Network Configuration

# Network to deploy to (mainnet, testnet, regtest)
NETWORK=testnet

# Bitcoin RPC Configuration
BITCOIN_RPC_URL=https://your-bitcoin-node:8332
BITCOIN_RPC_USER=your_rpc_username
BITCOIN_RPC_PASSWORD=your_rpc_password

## Deployment Wallet

# Private key for deployment (NEVER commit this!)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Deployment address
DEPLOYER_ADDRESS=your_address_here

## Contract Addresses (Update after deployment)

# PredictionToken contract address
PRED_TOKEN_ADDRESS=

# PredictionMarket contract address
MARKET_CONTRACT_ADDRESS=

# StakingContract contract address
STAKING_CONTRACT_ADDRESS=

# GovernanceContract contract address
GOVERNANCE_CONTRACT_ADDRESS=

## Initial Distribution Addresses

# Ecosystem fund wallet
ECOSYSTEM_WALLET_ADDRESS=

# Staking rewards wallet (contract itself)
STAKING_REWARDS_ADDRESS=

# Team vesting wallet
TEAM_WALLET_ADDRESS=

# Liquidity pool wallet
LIQUIDITY_WALLET_ADDRESS=

## Contract Parameters

# Token configuration
TOKEN_NAME="Prediction Token"
TOKEN_SYMBOL="PRED"
TOKEN_DECIMALS=8
TOTAL_SUPPLY=1000000000

# Market parameters
MARKET_CREATION_FEE=100000  # 0.001 BTC in satoshis
PROTOCOL_FEE_BPS=200        # 2% in basis points
MIN_BET_AMOUNT=10000        # 0.0001 BTC in satoshis

# Staking parameters
MIN_STAKE_AMOUNT=1000       # Minimum PRED to stake
SHORT_LOCK_PERIOD=144       # 1 day in blocks
MEDIUM_LOCK_PERIOD=1008     # 1 week in blocks
LONG_LOCK_PERIOD=4320       # 1 month in blocks
EARLY_WITHDRAWAL_PENALTY=1000  # 10% in basis points

# Governance parameters
PROPOSAL_THRESHOLD=10000    # PRED required to propose
VOTING_PERIOD=17280         # 5 days in blocks
VOTING_DELAY=144            # 1 day in blocks
EXECUTION_DELAY=2880        # 2 days in blocks
QUORUM_PERCENTAGE=400       # 4% in basis points

## Gas Configuration

# Gas limit for deployments
DEPLOYMENT_GAS_LIMIT=1000000

# Gas limit for transactions
TRANSACTION_GAS_LIMIT=500000

# Gas price (in satoshis per vbyte)
GAS_PRICE=10

## API Keys (Optional)

# Block explorer API key
EXPLORER_API_KEY=

# Analytics API key
ANALYTICS_API_KEY=

# Oracle API key
ORACLE_API_KEY=

## Feature Flags

# Enable testnet features
ENABLE_TESTNET_FEATURES=true

# Enable debug logging
DEBUG_MODE=false

# Enable contract verification
AUTO_VERIFY_CONTRACTS=true

## Security

# Multi-sig addresses for critical operations
MULTISIG_TREASURY=
MULTISIG_ADMIN=
MULTISIG_EMERGENCY=

# Timelock for sensitive operations (in blocks)
TIMELOCK_PERIOD=2880

## Frontend Configuration

# API endpoint
API_ENDPOINT=https://api.opnetpredictions.com

# WebSocket endpoint
WS_ENDPOINT=wss://ws.opnetpredictions.com

# IPFS gateway
IPFS_GATEWAY=https://ipfs.io

## Monitoring

# Monitoring webhook URL
MONITORING_WEBHOOK=

# Alert email
ALERT_EMAIL=

# Slack webhook
SLACK_WEBHOOK=

## Social & Marketing

# Website URL
WEBSITE_URL=https://opnetpredictions.com

# Twitter handle
TWITTER_HANDLE=@OPNetPredictions

# Discord invite
DISCORD_INVITE=

# Telegram group
TELEGRAM_GROUP=

## Notes

# Deployment notes or special instructions
DEPLOYMENT_NOTES="Initial deployment to testnet"

# Version
VERSION=1.0.0

# Deployment date
DEPLOYMENT_DATE=2026-02-25
